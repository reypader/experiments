<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%X{node_id}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.kubernetes.client" level="INFO"/>
    <logger name="com.rmpader" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>